<h3> Here are some Available jobs for {{post.user.username}} today </h3>
<ol class="post-list">
  <li>
    <article class="post">
      <div class="title">
        <div>{{post.title}}</div>
        <div>
          Created by:
          {{post.user.username}}
          on
          {{post.created_at}}
        </div>
        <div>
          {{post.title_body}}
        </div>

      </div>
      <div> Budget: ${{post.budget}} </div>
      <button href="{{post.post_url}}" target="_blank">Apply Now</button>

      <div>Technology Needed: {{post.techs}} </div>
      <div>
        Futher questions can be asked here
        <span> Email: {{post.user.email}} </span>
      </div>
      <a href="/post/{{id}}">{{post.comments.length}} review(s)</a>

      {{#if loggedIn}}
        <form class="comment-form">
          <div>
            <textarea name="comment-body"></textarea>
          </div>

          <div>
            <button type="submit">add reviews</button>
          </div>
        </form>
      {{/if}}

      <div class="comments">
        {{#each post.comments}}
          <section class="comment">
            <div class="meta">
              {{user.username}}
              on
              {{created_at}}
            </div>
            <div class="text">
              {{comment_text}}
            </div>
          </section>
        {{/each}}
      </div>
    </article>
  </li>
</ol>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}